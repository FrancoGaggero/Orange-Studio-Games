<script>
document.addEventListener('DOMContentLoaded', function() {
  const heroTitle = document.getElementById('hero-title');
  
  if (!heroTitle) return;

  const texts = {
    es: "Bienvenidos a Orange Studios Games",
    en: "Welcome to Orange Studios Games"
  };
  
  // Obtener idioma guardado o usar español por defecto
  const savedLang = localStorage.getItem('preferred-language') || 'es';
  let currentText = texts[savedLang as keyof typeof texts];
  
  function typeWriter(text: string, element: HTMLElement, speed: number = 100) {
    element.textContent = '';
    element.style.opacity = '1'; // Mostrar el elemento antes de comenzar
    let i = 0;
    
    function type() {
      if (i < text.length) {
        element.textContent += text.charAt(i);
        i++;
        setTimeout(type, speed);
      } else {
        // Agregar cursor parpadeante al final
        const cursor = document.createElement('span');
        cursor.textContent = '|';
        cursor.style.color = '#ea580c';
        cursor.style.fontWeight = 'bold';
        cursor.style.animation = 'blink 1s infinite';
        element.appendChild(cursor);
        
        // Quitar cursor después de 3 segundos
        setTimeout(() => {
          if (cursor.parentNode) {
            cursor.remove();
          }
        }, 3000);
      }
    }
    
    type();
  }

  // Iniciar typewriter después de un pequeño delay
  setTimeout(() => {
    typeWriter(currentText, heroTitle, 80);
  }, 500);
  
  // Escuchar cambios de idioma
  setTimeout(() => {
    const langButtons = document.querySelectorAll('.language-btn');
    langButtons.forEach(button => {
      button.addEventListener('click', function (this: HTMLElement) {
        const lang = this.id.includes('es') ? 'es' : 'en';
        setTimeout(() => {
          typeWriter(texts[lang], heroTitle, 50);
        }, 100);
      });
    });
  }, 1000);
});
</script>

